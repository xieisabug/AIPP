{
    "identifier": "mobile",
    "description": "permissions for mobile",
    "local": true,
    "platforms": [
        "android",
        "iOS"
    ],
    "windows": [
        "chat_ui"
    ],
    "permissions": [
        "core:default",
        "fs:allow-read-file",
        "fs:allow-write-file",
        "fs:allow-read-dir",
        "fs:allow-copy-file",
        "fs:allow-mkdir",
        "fs:allow-remove",
        "fs:allow-remove",
        "fs:allow-rename",
        "fs:allow-exists",
        {
            "identifier": "fs:scope",
            "allow": [
                "**"
            ]
        },
        "opener:allow-open-url",
        "opener:allow-default-urls",
        "dialog:allow-open",
        "dialog:allow-save",
        "dialog:allow-message",
        "dialog:allow-ask",
        "dialog:allow-confirm",
        "clipboard-manager:allow-read-text",
        "clipboard-manager:allow-write-text",
        "notification:default"
    ]
}
